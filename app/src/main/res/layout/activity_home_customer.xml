<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeCustomer"
    tools:context=".Customer.HomeCustomer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/action_bar_style"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="@string/customer"
                android:textSize="30dp"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_welcome"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/welcome_box_style">

            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:gravity=""
                android:text="@string/welcome"
                android:textColor="#fff"
                android:textSize="12pt" />

            <View
                android:layout_width="312dp"
                android:layout_height="1dp"
                android:layout_below="@id/text_welcome"
                android:layout_marginLeft="12dp"
                android:background="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/text_welcome"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2pt"
                android:text="@string/key"
                android:textColor="#fff"
                android:textSize="8pt" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="180dp"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/pink"
        android:outlineSpotShadowColor="@color/pink"
        >


        <Button
            android:id="@+id/btnDetailsCustomer"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_box_style"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="222dp"
            app:backgroundTint="@color/pink"
            android:text="@string/Details"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btnAddCustomer"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_box_style"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="22dp"
            android:text="@string/AddM"
            android:textColor="#fff"
            app:backgroundTint="@color/pink"
            />

        <Button
            android:id="@+id/btnFileCustomer"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_box_style"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="122dp"
            app:backgroundTint="@color/pink"
            android:text="@string/filepdf"
            android:textColor="#fff"
            />
    </RelativeLayout>

</RelativeLayout>